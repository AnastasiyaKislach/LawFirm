@using System.Linq
@model IEnumerable<LawFirm.Presenter.Models.SlideViewModel>

<div class="slider">
    <div id="carousel-generic" class="carousel slide" data-ride="carousel" data-interval="5000">
        <!-- Указатели-->
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++) {
                <li data-target="#carousel-generic" data-slide-to="@i" class='@(i == 0 ? "active" : "")'></li>
            }
        </ol>
        <!--Контент слайда (slider wrap)-->
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++) {
                <div class='item @(i == 0 ? "active" : "")'>
                    <img src="@Model.ElementAt(i).ImagePath" />
                    <div class="carousel-caption"></div>
                </div>
            }
        </div>
        <!-- Элементы управления-->
        <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
<hr />