@model LawFirm.Presenter.Models.CommentViewModels.CommentFormViewModel


<div id="comment-form" class="create-comment">
    @using (Ajax.BeginForm("Create", "Comment", null,
                        new AjaxOptions {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.InsertAfter,
                            UpdateTargetId = "comments-collection",
                            OnSuccess = "lawfirm.pages.blog.commentCreateHandler(data)",
                            //OnFailure = new Uri(Request.Url, Url.Action("Login", "Account")).ToString()
                        },
                                new { @class = "", @id = "forma", role = "form" })) {
        @Html.AntiForgeryToken()

        <div class="title-form">
            <h2>Добавить комментарий</h2>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                @Html.HiddenFor(m => m.ArticleId)
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @id = "inputDescription", @placeholder = "Ответ" })
                @Html.ValidationMessageFor(m => m.Text)
            </div>
        </div>
        <div class="col-sm-12 form-group button">
            <input type="submit" class="btn" value="Отправить" />
        </div>
    }
</div>